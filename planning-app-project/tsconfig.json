{
    "compilerOptions": {
      "target": "es6",                           // Specify ECMAScript target version (ES6 or later)
      "lib": ["dom", "dom.iterable", "esnext"],  // Include standard libraries for DOM and modern JS features
      "jsx": "react-jsx",                        // Enable JSX with React (use "react" if using older React versions)
      "module": "esnext",                        // Use the latest module system
      "moduleResolution": "node",               // Use Node.js style module resolution
      "strict": true,                            // Enable all strict type-checking options
      "esModuleInterop": true,                   // Enable compatibility with CommonJS modules
      "skipLibCheck": true,                      // Skip type checks for libraries
      "forceConsistentCasingInFileNames": true, // Ensure file name casing is consistent
      "allowJs": true,                           // Allow JavaScript files in the project
      "outDir": "./dist",                        // Specify output directory for compiled files
      "resolveJsonModule": true                  // Allow importing .json files
    },
    "include": ["src"],                          // Include all files in the `src` folder
    "exclude": ["node_modules", "dist"]          // Exclude `node_modules` and build output
  }
  